{
  "name": "minecraft_bot",
  "version": "1.2.0",
  "description": "Connecting Minecraft bot to a server, featuring an intuitive graphical user interface (GUI).",
  "main": "./out/main/index.js",
  "author": {
    "name": "vantanto.github.io",
    "email": "kristanto.margojoyo99@gmail.com"
  },
  "homepage": "https://github.com/vantanto",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "watch": "electron-vite dev --watch",
    "build": "electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build:unpack": "npm run build && electron-builder --dir",
    "build:win": "npm run build && electron-builder --win",
    "build:mac": "npm run build && electron-builder --mac",
    "build:linux": "npm run build && electron-builder --linux"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.2",
    "@electron-toolkit/utils": "^4.0.0",
    "@quasar/extras": "^1.17.0",
    "electron-json-storage": "^4.6.0",
    "mineflayer": "^4.33.0",
    "quasar": "^2.18.6",
    "vue-router": "^4.6.3"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config": "^2.1.0",
    "@quasar/vite-plugin": "^1.10.0",
    "@rushstack/eslint-patch": "^1.15.0",
    "@trivago/prettier-plugin-sort-imports": "^6.0.0",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vue/eslint-config-prettier": "^10.2.0",
    "electron": "^39.2.0",
    "electron-builder": "^26.0.12",
    "electron-vite": "^4.0.1",
    "eslint": "^9.39.1",
    "eslint-plugin-vue": "^10.5.1",
    "prettier": "^3.6.2",
    "sass": "^1.94.0",
    "vite": "^7.2.2",
    "vue": "^3.5.24"
  },
  "build": {
    "appId": "com.vantanto.minecraft_bot",
    "productName": "MinecraftBOT",
    "win": {
      "target": [
        "portable"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility"
    }
  }
}
